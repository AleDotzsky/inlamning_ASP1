@model ProductModel

<div class="item">
	<div class="image-section">
		<img src="@Model.ImageUrl"
			 alt="picture missing" />
		<div class="menu">
			<div class="icons">
				<button class="link">
					<i class="fa-regular fa-code-compare"></i>
				</button>
				<button class="link">
					<i class="fa-regular fa-heart"></i>
				</button>
				<button class="link">
					<i class="fa-regular fa-bag-shopping"></i>
				</button>
			</div>
			<a class="btn-theme" asp-controller="Product" asp-action="Index" asp-route-productId="@Model.ProductId" >QUICK VIEW</a>
		</div>
	</div>
	<div class="body-section">
		<div class="category">@Model.Category.CategoryName</div>
		<div class="name">@Model.Title</div>
		<partial name="~/Views/Shared/Partials/_StarRatingPartial.cshtml" model="@Model" />
		<div class="price">$@Model.Price.ToString("0.00")</div>
	</div>
</div>

