@model ContactViewModel

<section class="breadcrumb">
    <div class="container">
        <ul>
            <li><a class="menu-link" href="index.html">Home</a></li>
            <li class="active">Contacts</li>
        </ul>
    </div>
</section>

<section class="google-maps">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d63796.40930305892!2d45.3091084177447!3d2.0456673869829647!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3d58425955ce6b53%3A0xbb20eaaa52cc59d9!2sMogadishu%2C%20Somalia!5e0!3m2!1ssv!2sse!4v1682081746153!5m2!1ssv!2sse" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>

<section class="contact-form">
    <div class="container">
        <h1>Come in Contact with Us</h1>
        <form method="post" class="container mt-4" novalidate>
            <div asp-validation-summary="ModelOnly"></div>

            <div class="contact-form-name">
                <input asp-for="Name" type="text" placeholder="Your Name" />
                <span asp-validation-for="Name" class="error"></span>
            </div>
            <div class="contact-form-email">
                <input asp-for="Email" type="email" placeholder="Your Mail" />
                <span asp-validation-for="Email" class="error"></span>
            </div>
            <div class="contact-form-comments">
                <textarea asp-for="Comment" placeholder="Comments"></textarea>
                <span asp-validation-for="Comment" class="error"></span>
            </div>

            <button class="btn-theme" type="submit">Post Comments</button>
            @if (ViewBag.Submit != null)
            {
                <div class="alert alert-success" role="alert">
                    <p>Thank you for reaching out to us!</p>
                </div>
            }
        </form>
    </div>
</section>