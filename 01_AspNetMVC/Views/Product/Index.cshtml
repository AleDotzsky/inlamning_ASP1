@model ProductModel

<section class="breadcrumb">
    <div class="container">
        <ul>
            <li><a class="menu-link" href="index.html">Home</a></li>
            <li class="active">Product View</li>
        </ul>
    </div>
</section>



<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="product-image">
                <img src="@Model.ImageUrl" alt="product-image" class="img-fluid">
            </div>

        </div>
        <div class="col-md-6">
            <div class="product-information">
                <h2 class="product-name">@Model.Title</h2>
                <div class="star-rating">
                    <partial name="~/Views/Shared/Partials/_StarRatingPartial.cshtml" model="@Model" />
                </div>
                <div class="price mt-1">$@Model.Price.ToString("0.00")</div>
                <p class="product-description mt-1">
                    @Model.Description
                </p>
                <div class="form-group row">
                    <label for="size-select" class="col-sm-2 col-form-label">Size: </label>
                    <div class="col-sm-10 ">
                        <button class="btn btn-outline-secondary mr-2">S</button>
                        <button class="btn btn-outline-secondary mr-2">M</button>
                        <button class="btn btn-outline-secondary mr-2">L</button>
                        <button class="btn btn-outline-secondary mr-2">XL</button>
                    </div>                    
                </div>
                <div class="form-group row">
                    <label for="color-select" class="col-sm-2 col-form-label">Color:</label>
                    <div class="col-sm-10 mt-1">
                        <select class="form-control ml-2" id="color-select">
                            <option>Red</option>
                            <option>Blue</option>
                            <option>Green</option>
                            <option>Yellow</option>
                            <option>Teal</option>
                            <option>Black</option>
                            <option>Purple</option>
                        </select>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <label for="quantity-select" class="col-sm-2 col-form-label">Quantity:</label>
                    <div class="col-sm-10 mt-1">
                        <input type="number" class="form-control ml-2" id="quantity-select" value="1" min="1">
                    </div>
                    
                </div>

            </div>
        </div>
    </div>
    <div class="product-reviews">
